AttributeBegin
  Material "diffuse" "rgb reflectance" [ 1.0 0.0 0.0] # Red
  Shape "bilinearmesh" "point3 P" [-5 0 -12  -5 0 5  -5 10 -12  -5 10 5] # Left
  Material "diffuse" "rgb reflectance" [ 0.0 1.0 0.0] # Green

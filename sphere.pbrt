AttributeBegin
  NamedMaterial "CustomMat"
  #Shape "sphere" "float radius" 1
  Shape "bilinearmesh"
    "point3 P" [-2 0.1 2  2 0.1 2  -2 0.1 -2  2 0.1 -2]
    "point2 uv" [0 0  1 0  0 1  1 1]
AttributeEnd

